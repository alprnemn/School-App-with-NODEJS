<!-- Login Form -->
<form class="max-w-sm mx-auto" method="post">
    <!-- csrf_token  -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <!-- Student Number -->
    <div class="mb-5">
        <label for="studentno" class="mb-2 text-lg font-medium text-gray-700 ">Your Number</label>
        <input type="number" id="studentno" name="studentno" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm md:text-md font-medium rounded-lg block w-full p-2.5 " placeholder="202444332" required value="20242424" />
    </div>

    
    <!-- Password -->
    <div class="mb-5">
        <label for="password" class="mb-2 text-lg font-medium text-gray-700">Password</label>
        <input type="password" id="password" name="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm md:text-md rounded-lg  block w-full p-2.5 " placeholder="********" required />
    </div>
    
    <a href="/reset-password" class="block text-gray-700 font-medium my-2 text-center">Forgot My Password</a>

    <div class="flex flex-col items-center justify-center">
        <button type="submit" class="w-[170px] h-[50px]  mt-2 text-white bg-blue-800 hover:scale-110 duration-300  font-medium rounded-lg text-sm    text-center">Log-In</button>
        <a href="/register"><button type="button" class="w-[170px] h-[50px] mt-3 text-white bg-blue-800 hover:scale-110 duration-300  font-medium rounded-lg text-sm text-center">Sign-Up</button></a>
    </div>
</form>